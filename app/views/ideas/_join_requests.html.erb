<% if idea.join_to_me_requests.present? %>
  <hr/>
  <div class="join-requests">
    <% idea.join_to_me_requests.pending.each do |join_request| %>
      <div class="join-request alert alert-info">
        The idea <%= link_to join_request.idea.title, join_request.idea %> created by <%= join_request.idea.user.name %> want's to join this idea!
        <%= link_to 'View details', join_request_path(join_request) %>
      </div>
    <% end %>
  </div>
<% end %>

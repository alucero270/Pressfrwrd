<%= form_for @user, builder: LabeledBootstrapFormBuilder, html: {role:"form", class:"user"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :name %>
  <%= f.text_field :email %>
  
  <%= f.password_field :password %>
  
  <%= f.password_field :password_confirmation, label:"Confirmation" %>

  <%= f.submit f.object.new_record? ? "Sign up" : "Save changes" %>

<% end %>

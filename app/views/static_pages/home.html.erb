<% if signed_in? %>
  <%= form_tag ideas_path, method: :get do %>
    <p>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Search", name: nil %>
    </p>
  <% end %>
  
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/idea_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Idea Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Pressfrwrd</h1>

    <h2>
    Pressfrwrd is a place to grow your ideas. It relates your lovely ideas with other common thinkers to provide you the chance to further your ideas as they come to you. Type it, post it, find others who thought it, and make it happen together.

    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>